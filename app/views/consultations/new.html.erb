<%= content_tag :div, nil, id: "first-consultation", class: "calendly-inline-widget",
  data: { name: @current_user.name, email: @current_user.email } do %>
  <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js"></script>
  <script>
    const $name = $('#first-consultation').data('name');
    const $email = $('#first-consultation').data('email');

    Calendly.initInlineWidget({
      url: 'https://calendly.com/novum-opus/consultation',
      prefill: { name: $name, email: $email },
      utm: {}
    });
  </script>
<% end %>
