<div class="ui container">
  <img class="ui fluid image" src="/business-meeting.jpg">

  <% if @current_user.present? %>
    <div class="ui segment">
      <div class="ui center aligned header">Thank you for signing up.</div>
    </div>
  <% else %>
    <div class="ui segment">
      <h1 class="ui center aligned header">Start life intelligently.</h1>
      <div class="item">
        Our life consulting mentors partner with young adults to guide them through the tough, life-changing decisions they need to make.
      </div>
      <div class="item">
        Sign up below to schedule a free introductory consultation.
      </div>
    </div>

    <div class="ui segment">
      <h2 class="ui center aligned header">Sign Up</h2>
      <%= form_for @user, html: {class: "ui form"} do |f| %>
        <div class="field">
          <%= f.label :name, "Full name" %>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
        <%= f.submit "Schedule a free consultation", class: "ui button" %>
      <% end %>
    </div>
  <% end %>
</div>
