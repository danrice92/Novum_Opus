<div class="ui container">
  <img class="ui fluid image" src="business-meeting.jpg">
  <div class="ui segment">
    <h1 class="ui center aligned header">
      Novum Opus is a social platform that allows peers to share career advice.
    </h1>
  </div>
  <% @job_experiences.each do |je| %>
    <div class="ui segment">
      <div class="ui header">
        <%= je.position %> at <%= je.company %>
      </div>
      <div class="ui label">
        Location: <%= je.city %>, <%= je.state %>
      </div>
      <div class="ui list">
        <div class="item">
          <div class="header">Experience</div>
          <%= je.experience %>
        </div>
        <div class="item">
          <div class="header">Pay</div>
          <%= je.pay %>
        </div>
        <div class="item">
          <div class="header">Recommendation</div>
          <%= je.recommendation %>
        </div>
        <br>
        <div class="ui label">
          Website: <a class="experience-link" href="<%= je.website %>"><%= je.website %></a>
        </div>
      </div>
    </div>
  <% end %>
</div>
