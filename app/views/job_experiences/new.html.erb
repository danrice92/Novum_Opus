<div class="ui container">
  <div class="ui segment">
    <h1 class="ui center aligned header">New Job Experience</h1>
    <%= form_for @job_experience, html: {class: 'ui form'} do |f| %>
      <div class="field">
        <%= f.label :position %>
        <%= f.text_field :position %>
      </div>
      <div class="field">
        <%= f.label :company %>
        <%= f.text_field :company %>
      </div>
      <div class="field">
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>
      <div class="field">
        <%= f.label :state %>
        <%= f.text_field :state %>
      </div>
      <div class="field">
        <%= f.label :experience %>
        <%= f.text_area :experience, rows: 3 %>
      </div>
      <div class="field">
        <%= f.label :pay %>
        <%= f.text_area :pay, rows: 2 %>
      </div>
      <div class="field">
        <%= f.label :recommendation %>
        <%= f.text_area :recommendation, rows: 2 %>
      </div>
      <div class="field">
        <%= f.label :website %>
        <%= f.text_field :website %>
      </div>
      <%= f.submit "Submit", class: "ui button" %>
    <% end %>
  </div>
</div>
