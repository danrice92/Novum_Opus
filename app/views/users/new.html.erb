<div class="ui container">
  <div class="ui segment">
    <h2 class="ui header">Join Novum Opus</h2>
    <%= form_for @user, html: {class: 'ui form'} do |f| %>

      <div class="field">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, placeholder: "John" %>
        <%= f.error_message :first_name %>
      </div>

      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, placeholder: "Smith" %>
        <%= f.error_message :last_name %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: "john.smith@example.com" %>
        <%= f.error_message :email %>
      </div>

      <div class="ui list">
        <div class="item">
          Novum Opus uses magic links for verification. No need for yet another password!
        </div>
      </div>

      <%= f.submit "Create Account", class: "ui button" %>
    <% end %>
  </div>
</div>
